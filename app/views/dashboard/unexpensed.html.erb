<%= form_tag expense_report_create_path do %>
  <table id="recent_receipts">
    <tr>
      <th></th>
      <th>Purchase Date</th>
      <th>Store</th>
      <th>Total</th>
    </tr>

  <% @receipts.each do |receipt| %>
    <tr>
      <td><%= check_box_tag "receipt_ids[]", receipt.id %></td>
      <td><%= receipt.purchase_date.to_date.to_s(:short) %></td>
      <td><%= receipt.store.name %></td>
      <td class="right"><%= link_to number_to_currency(receipt.total), receipt %></td>
    </tr>
  <% end %>
  <tfoot>
    <tr>
      <td colspan="3"><%= text_field_tag "external_report_id", nil, :placeholder => "Expense Report ID" %></td>
      <td><%= submit_tag "Create Expense Report" %></td>
    </tr>
  </tfoot>
  </table>
<% end %>